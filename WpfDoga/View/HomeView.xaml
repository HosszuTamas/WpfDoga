<UserControl x:Class="WpfDoga.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDoga.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="20" Margin="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#ac9870" Offset="1.0"/>
                <GradientStop Color="#f4be56" Offset="0.1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <TextBlock Text="Task 1" FontSize="20" Foreground="Black" Margin="15"></TextBlock>
        </Grid>
    </Border>
</UserControl>
